{
    "builds": [
        {"src": "client/package.json", 
            "use": "@vercel/node",
            "config": {
                "distDir": "client/dist",
                "memorySize": 1024
            }
        },
        {"src": "python-service/app.py", 
            "use": "@vercel/python",
            "config": {
                "distDir": "client/dist",
                "memorySize": 1024
            }
        }
    ],
    "routes": [
        {
        "src": "/(.*)",
        "dest": "/"
        }
    ]
}