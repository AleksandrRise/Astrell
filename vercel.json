{
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/dist", 
  "framework": "vite",
  "functions": {
    "python-service/app.py": {
      "runtime": "python3.9",
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/python-service/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}