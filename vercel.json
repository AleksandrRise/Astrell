{ 
    "rewrites": [
        { "source": "/(.*)", "destination": "/" }
    ],
    "builds": [
        {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
            "distDir": "dist",
            "buildCommand": "npm run build"
        }
        },
        {
        "src": "python-service/app.py",
        "use": "@vercel/python"
        }
    ],
    "routes": [
        {
        "src": "/api/(.*)",
        "dest": "/python-service/app.py"
        },
        {
        "src": "/(.*)",
        "dest": "/client/dist/$1"
        }
    ]
}